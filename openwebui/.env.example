# =================================
# Ollama Configuration
# =================================
# For local Ollama (running on host machine):
OLLAMA_BASE_URL=http://host.docker.internal:11434
# For Ollama in Docker (uncomment if using ollama service):
# OLLAMA_BASE_URL=http://ollama:11434
# =================================
# OpenAI Configuration
# =================================
OPENAI_API_BASE_URL=
OPENAI_API_KEY=your_openai_api_key_here
# =================================
# Port Configuration
# =================================
# Open WebUI backend port
PORT=8767
HOST=0.0.0.0

# LangBuilder configuration (only needed if running LangBuilder) in docker compose with 2 containers
# VITE_PORT=3000
# VITE_PROXY_TARGET=http://langbuilder-backend:8002
# LANGBUILDER_BACKEND_PORT=8002

# =================================
# CORS Configuration
# =================================
# Allow all origins (development only)
CORS_ALLOW_ORIGIN=*
# For production you should set this to match the proxy configuration
FORWARDED_ALLOW_IPS=*
# =================================
# Telemetry & Analytics
# =================================
SCARF_NO_ANALYTICS=true
DO_NOT_TRACK=true
ANONYMIZED_TELEMETRY=false
# =================================
# Google OAuth Configuration
# =================================
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8767/oauth/google/callback
# Google Drive Integration
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your_google_client_secret_here
WEBUI_URL=http://localhost:5175
# OAuth Settings
ENABLE_OAUTH_SIGNUP=true
OAUTH_ALLOWED_DOMAINS=*
OAUTH_MERGE_ACCOUNTS_BY_EMAIL=true
OAUTH_UPDATE_PICTURE_ON_LOGIN=true
# OpenID Provider URL for proper logout functionality
OPENID_PROVIDER_URL=https://accounts.google.com/.well-known/openid_configuration
# =================================
# Authentication Settings
# =================================
ENABLE_SIGNUP=true
ENABLE_LOGIN_FORM=true
ENABLE_API_KEY=true
# =================================
# Application Settings
# =================================
WEBUI_NAME=ActionBridge
WEBUI_SECRET_KEY=your-secret-key-here
JWT_EXPIRES_IN=24h
# =================================
# Session Configuration (OAuth Fix)
# =================================
WEBUI_SESSION_COOKIE_SAME_SITE=lax
WEBUI_SESSION_COOKIE_SECURE=false
# Enable debug logging for development
GLOBAL_LOG_LEVEL=DEBUG
LOG_LEVEL=debug
# =================================
# Corporate Authentication (Optional)
# =================================
CORPORATE_AUTH_CONFIG=/app/corporate_config.json
GOOGLE_WORKSPACE_DOMAIN=actionbridge.com
GOOGLE_WORKSPACE_ADMIN_EMAIL=admin@actionbridge.com
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=/app/secrets/google-service-account.json
CORPORATE_GROUP_MAPPINGS={"actionbridge-admin@actionbridge.com": "admin", "actionbridge-users@actionbridge.com": "user", "engineering@actionbridge.com": "user", "management@actionbridge.com": "admin"}
# =================================
# Zoho OAuth Configuration
# =================================
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REDIRECT_URI=http://localhost:8002/api/v1/services/zoho/callback
# =================================
# GoogleDriveAgent Configuration
# =================================
GOOGLE_DRIVE_TOKEN=your_google_drive_token_here
GOOGLE_DRIVE_USER_ID=your_google_drive_user_id_here
GOOGLE_DRIVE_AGENT_URL=http://host.docker.internal:8000/process
GOOGLE_DRIVE_AGENT_PATH=/home/eugene/proj/GoogleDriveAgent
KMS_MASTER_KEY=dGVzdC1rZXktMzItYnl0ZXMtYmFzZTY0LWVuY29kZWQ=
# =================================
# Development Settings
# =================================
ENV=dev
NODE_ENV=development
PYTHONUNBUFFERED=1